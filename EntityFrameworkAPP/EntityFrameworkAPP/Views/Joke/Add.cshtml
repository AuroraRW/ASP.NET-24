@model Joke
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["title"] = "Add Joke";
}
    <h1>New Joke:</h1>
    <form method="post" asp-controller="Joke" asp-action="Add">
        @* <div asp-validation-summary="All"></div> *@
        <label asp-for="JokeQuestion"></label>
        <input type="text" asp-for="JokeQuestion" />
        <div>
            <span asp-validation-for="JokeQuestion"></span>
        </div>
        <label asp-for="JokeAnswer"></label>
        <input type="text" asp-for="JokeAnswer" />
        <div>
            <span asp-validation-for="JokeAnswer"></span>
        </div>
        <button type="submit">Add</button>
    </form>
