@* @using RazorViewApp.Models *@
@model Person
<!DOCTYPE html>
<html>
<head>
    <title>Person Details</title>
    <meta charset="UTF-8" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <div>
        <h1>Person Details</h1>
        <div>
            <h3>@Model.Name</h3>
            <table>
                <tbody>
                    <tr>
                        <td>Gender</td>
                        <td>@Model.PersonGender</td>
                    </tr>
                    <tr>
                        <td>Date of Birth</td>
                        <td>@Model.DateOfBirth?.ToString("MM/dd/yyyy")</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <a href="/Data">Back to persons</a>
    </div>
</body>
</html>